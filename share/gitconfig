[commit]
  gpgSign = 1
[init]
  defaultBranch = main
[ghq]
  root = ~/Developer
#  vcs = git
[core]
	excludesfile = /Users/koko/Developer/github.com/kokopis/dotfiles/share/gitignore_global
[pull]
  rebase = true
[alias]
  co = checkout
  br = checkout -b
  cm = commit -S -m
  st = status
  sh = stash
  l = log --show-signature
  lc = log -1 HEAD
  r = reset --hard
  us = reset HEAD --
  f = fetch --all --prune
  pl = pull --rebase
  pu = push
  d = diff
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
